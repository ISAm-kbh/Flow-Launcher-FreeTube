<UserControl x:Class="Flow.Launcher.Plugin.FreeTube.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:FreeTube="clr-namespace:Flow.Launcher.Plugin.FreeTube"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flow.Launcher.Plugin.FreeTube"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="SettingsControl_Loaded">
    <Grid Margin="70,13.5,18,13.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,4.5,9,4.5"
            VerticalAlignment="Center"
            FontSize="14"
            Text="Primary Open Strategy"/>
        <ComboBox x:Name="WindowStrategyComboBox"
                  Grid.Row="0"
                  Grid.Column="1"
                  MaxWidth="300"
                  Margin="0,4.5,9,4.5"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  ItemsSource="{Binding windowFavorings}"
                  SelectedItem="{Binding favoredWindowStrategy}"/>
    </Grid>
</UserControl>
